<% title "#{@guest.guest_name}" %>
<div id="content" class="container_16">
    	<!-- begin main content area -->
        <div id="page_content" class="grid_11 alpha">
        	<h3 class="content_title"> <%=@guest.guest_name %></h3>

<% if !flash[:notice].blank? %>
<div>
	<p align = "center"><%= flash[:notice] %></p>
</div>
<% end %>        	
  <table border='border'>
    <tr>
      <th>Guest Name:</th>
      <td><%= @guest.guest_name %></td>
    </tr>
    <tr>
        <th>Event_Name :</th>
    <td>
     <%  @guest.events.each do |event| %>
     <%= event.event_name %> <%end%>
  </td>
   </tr>

    <tr>
      <th>Contact Number</th>
      <td><%= @guest.guest_mob %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= @guest.guest_email %></td>
    </tr>
     <tr>
      <th>Role:</th>
      <td><%= @guest.guest_role %></td>
    </tr>
    <tr>
      <th>Details:</th>
      <td><%= @guest.guest_details %></td>
    </tr>
    
  </table>
<br/>
<p align="right"><%= link_to("Back", {:action => 'index'}) %>&nbsp;&nbsp;&nbsp;<%= link_to("Edit", {:action => 'edit', :id=> @guest.id }) %></p>

</div>
</div> 