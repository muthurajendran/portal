<% title "Company for Pg" %>
<div id="content" class="container_16">
    	<!-- begin main content area -->
        <div id="page_content" class="grid_11 alpha">
        	<h1 class="content_title">Companies coming for P.G</h1>
<% if !flash[:notice].blank? %>
	<div>
		<p align="center"><%= flash[:notice] %></p><br/><br/>
	</div>
<% end %>


<%= form_tag({:controller => 'excel',:action => 'pg_company_excel'}) do %>
  			<div>
  				<table border = "1">
  				<tr>
    				<th><%= label_tag "file name"  %></th>
    				<td><%= text_field_tag :filename %></td>
    			</tr>
    			</table>
  			</div>
			<div class = "actions" >
  			<br/><%= submit_tag("Generate SpreadSheet", :class => "button medium radius5") %><br/><br/><br/><br/>
  			</div>
		<%end%>
<div>
	<div>
		<p align = "right"><%= link_to("Add new pg_company", {:action=>'new'}) %></p>
	</div>	
<table border="1">
  <tr>
  	<th>Actions</th>
    <th>pg_company Name</th>
    
    <th>Eligible PG Branches</th>
    <th>Sslc</th>
    <th>Puc</th>
    <th>Diploma</th>
    <th>Maximum Backlogs Allowed</th>
    <th>Cgpa in BE</th>
    <th>Cgpa in Mtech</th>
    <th>BE Percentage</th>
    <th>Cgpa in Mca</th>
    <th>Degree Percentage</th>
    <th>Gap in Education</th>
    <th>Registration date</th>
    <th>Preplacement talk</th>
    <th>Interview date</th>
    <th>Test Date</th>
    
  
  </tr>

<% @pg_companies.each do |pg_company| %>
  <tr>
  	<td> <%= link_to("Show", {:action => 'show', :id => pg_company.id}, :class => 'action show' ) %>
      <%= link_to("Edit", {:action=>'edit' ,:id=> pg_company.id}, :class => 'action edit') %>
     <%= link_to("Delete", {:action=>'delete', :id=> pg_company.id}, :class => 'action delete') %></td>
    <td><%= pg_company.cmp_name %></td>
   
 <td>
     <% pg_company.pg_branches.each do |pgbranch| %>
     <%= pgbranch.branch_name %> <%end%>
    </td>
    <td><%= pg_company.sslc %></td>
    <td><%= pg_company.puc %></td>
    <td><%= pg_company.diploma %></td>
   <td><%= pg_company.backlogs %></td>
    <td><%= pg_company.mtech_be_cgpa %></td>
    <td><%= pg_company.mtech_cgpa %></td>
    <td><%= pg_company.mtech_be_per %></td>
    <td><%= pg_company.mca_cgpa %></td>
    <td><%= pg_company.degree %></td>
    <% if pg_company.gap_in_edu == -1%>
    	<td>Not Applicable </td>
    <%else%>
    	<td><%= pg_company.gap_in_edu %></td>
	<%end%>
    
    <% if pg_company.reg_date.to_s == '1910-01-01'%>
    	<td>Not Decided</td>
    <%else%>    
    	<td><%= pg_company.reg_date %></td>
    <%end%>
    <% if pg_company.preplacement_talk.to_s == '1910-01-01' %>
    	<td>Not Decided</td>
    <%else%>
    	<td><%= pg_company.preplacement_talk %></td>
    <%end%>
    <% if pg_company.test_date.to_s == '1910-01-01' %>
    	<td>Not Decided</td>
    <%else%>
    	<td><%= pg_company.test_date %></td>
    <%end%>
    <% if pg_company.interview_date.to_s == '1910-01-01' %>
    	<td>Not Decided</td>
    <%else%>
    	<td><%= pg_company.interview_date %></td>
    <%end%>
    
    
   </tr>
	<% end %>
	</table>
</div>
</div>
</div>

