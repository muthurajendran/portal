<% title "Edit  #{@student.name}" %>
<div id="content" class="container_16">
    	<!-- begin main content area -->
        <div id="page_content" class="grid_11 alpha">
        	<h3 class="content_title">Change <%= @student.reg_no %> details</h3>
        	
<div>
	<p align = "left"><a class="tipfade"  original-title = "Required"> *</a></th>&nbsp;&nbsp;Required</p>
	<p align = "left"><a class="tipfade"  original-title = "Optional"> **</a></th>&nbsp;&nbsp;Leave blank if not applicable</p>
     	
</div>       	
        	
<% if !flash[:notice].blank? %>
<div>
	<p align = "center"><%= flash[:notice] %></p>
</div>
<% end %>   


<div>
<% if @student.errors.any? %>
    <div id="error">
      <h4 class="content_title"><%= pluralize(@student.errors.count, "Error") %> Prohibited your data from being saved:</h4>
      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul><br/><br/>
    </div>
  <% end %>
</div>
              	


<div>

<%= form_for(:student,:url => {:action => 'update', :id=> @student.id}, :html => {:multipart => true }) do |f| %>
</div>  
<table border = "1">
  	<tr>
    	<th><%= f.label "Name" %><a class="tipfade"  original-title = "Required">  *</a></th>
    	<td><%= f.text_field :name %></td>
    </tr>
	
	<tr>  
    	<th><%= f.label"Date of Birth" %><a class="tipfade"  original-title = "Required">  *</a></th>
    	<td><%= f.date_select :dob,:start_year => 1980 %></td>
 	</tr>
 	<tr>  
    	<th><%= f.label "Gender" %></th>
    	<td><%= f.select :gender,['Male', 'Female'] %></td>
 	</tr>
   	
 	<tr>
    	<th><%= f.label :sem %><a class="tipfade"  original-title = "Required">  *</a></th>
    	<td><%= f.select(:sem,7..8) %></td>
  	</tr>
   	<tr>
    	<th><%= f.label :branch_id %><a class="tipfade"  original-title = "Required">  *</a></th>
    	<td><%= f.select(:branch_id,Branch.all.collect{|b| [b.branch_name,b.id]}) %></td>
    </tr>
  	<tr>	
  		<th><%= f.label "Academic Year" %><a class="tipfade"  original-title = "Required">  *</a></th>
    	<td><%= f.select(:academic_year1,[*2001..2025]) %>-<%= f.select(:academic_year2,[*2002..2030]) %></td>
    </tr>
 	<tr>
    	<th><%= f.label "Percentage In Sslc" %><a class="tipfade"  original-title = "Required">  *</a></th>
    	<td><%= f.text_field :sslc %></td>
 	</tr>
    <tr>
    	<th><%= f.label "Percentage In Puc"%><a class="tipfade"  original-title = "Leave blank if not applicable">  **</a></th>
    	<td><%= f.text_field :puc %></td>
 	</tr>
    <tr>
    	<th><%= f.label "Percentage In Diploma" %><a class="tipfade"  original-title = "Leave blank if not applicable">  **</a></th>
    	<td><%= f.text_field :diploma %></td>
  	</tr>
    <tr>
    	<th><%= f.label "Gap in Education" %><a class="tipfade"  original-title = "Required">  *</a></th>
    	<td><%= f.select(:gap_in_edu,0..20) %></td>
 	</tr>
    <tr>
    	<th><%= f.label "Sem 1 sgpa" %><a class="tipfade"  original-title = "Leave blank if not applicable">  **</a></th>
    	<td><%= f.text_field :sgpa_sem1 %></td>
  	</tr>
    <tr>
    	<th><%= f.label "Sem 2 sgpa" %><a class="tipfade"  original-title = "Leave blank if not applicable">  **</a></th>
    	<td><%= f.text_field :sgpa_sem2 %></td>
 	</tr>
    <tr>
    	<th><%= f.label "Sem 3 sgpa" %><a class="tipfade"  original-title = "Required">  *</a></th>
    	<td><%= f.text_field :sgpa_sem3 %></td>
  	</tr>
    <tr>
    	<th><%= f.label "Sem 4 sgpa" %><a class="tipfade"  original-title = "Required">  *</a></th>
    	<td><%= f.text_field :sgpa_sem4 %></td>
 	</tr>
    <tr>
    	<th><%= f.label "Sem 5 sgpa" %><a class="tipfade"  original-title = "Required">  *</a></th>
    	<td><%= f.text_field :sgpa_sem5 %></td>
  	</tr>
    <tr>
    	<th><%= f.label "Sem 6 sgpa" %><a class="tipfade"  original-title = "Required">  *</a></th>
    	<td><%= f.text_field :sgpa_sem6 %></td>
  	</tr>
    <tr>
    	<th><%= f.label "Sem 7 sgpa" %><a class="tipfade"  original-title = "Leave blank if not applicable">  **</a></th>
    	<td><%= f.text_field :sgpa_sem7 %></td>
  	</tr>
 	<tr>
    	<th><%= f.label "Sem 8 sgpa" %><a class="tipfade"  original-title = "Leave blank if not applicable">  **</a></th>
    	<td><%= f.text_field :sgpa_sem8 %></td>
  	</tr>
    <tr>
    	<th><%= f.label "Cgpa" %><a class="tipfade"  original-title = "Required">  *</a></th>
    	<td><%= f.text_field :cgpa %></td>
  	</tr>
  	<tr>
    	<th><%= f.label "Active Backlog" %><a class="tipfade"  original-title = "Required">  *</a></th>
    	<td><%= f.select(:active_backlog,0..10) %></td>
  	</tr>
    <tr>
    	<th><%= f.label "Total Backlogs (Total F grades)" %><a class="tipfade"  original-title = "Required">  *</a></th>
    	<td><%= f.select(:total_backlogs,0..30) %></td>
 	</tr>
 	<tr>
    	<th><%= f.label "Landline Number" %></th>
    	<td><%= f.text_field :telephone %></td>
 	</tr>
 	<tr>
   		<th><%= f.label "Mobile Number"%><a class="tipfade"  original-title = "Required">  *</a></th>
    	<td><%= f.text_field :mobile %></td>
 	</tr>
 	<tr>
    	<th><%= f.label "Email" %><a class="tipfade"  original-title = "Required">  *</a></th>
    	<td><%= f.text_field :email %></td>
 	</tr>
 	<tr>
    	<th><%= f.label "Address" %><a class="tipfade"  original-title = "Required">  *</a></th>
    	<td><%= f.text_area :address %></td>
	</tr>

	
  </table><br/>

  <div class = "actions" > <br/>
  <p align = "right"><%= submit_tag("Update", :class => "button medium radius5") %></p>
  </div>
<% end %>
<% if permitted_to? :home_admin,@user=User.new %>
	 <div>
	 	
    	<p align="left"><%= link_to("Click to go Back", {:action => 'index'}) %></p>
    </div>
<% end %>

</div>
</div>



