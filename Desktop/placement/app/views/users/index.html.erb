<% title "User List" %>

<% if permitted_to? :home_admin,@user=User.new %>
<div id="content" class="container_16">
    	<!-- begin main content area -->
        <div id="page_content" class="grid_11 alpha">
        	<h1 class="content_title">Users</h1>
<% if !flash[:notice].blank? %>
<div>
	<p align = "center"><%= flash[:notice] %></p>
</div>
<% end %> 

<div>
	<table border =  "1">
  	<tr>
    	<th>Username</th>
    	<th>Password</th>
    	<th colspan = "3" >Actions</th>
    </tr>
	<% @users.each do |user| %>
  	<tr>
    	<td><%= user.username %></td>
    	<td><%= user.password %></td>
    	<td><%= link_to 'Show',{:action=>'show',:id=>user.id} %>&nbsp;&nbsp;&nbsp;<%= link_to("Delete", {:action=>'delete', :id=> user.id}, :class => 'action delete') %></td>
  	</tr>
	<% end %>
</table><br/>
</div>
</div>
</div>
<% else %>
  <h3>Invalid url </h3> <%= link_to 'go to placement page',{:controller=>'home' ,:action=>'index'} %>
<% end %>