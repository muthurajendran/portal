<% title "User Details" %>
<% if permitted_to? :home_admin,@u=User.new %>
<div id="content" class="container_16">
    	<!-- begin main content area -->
        <div id="page_content" class="grid_11 alpha">
        	<h3 class="content_title"> <%=@user.username %></h3>

<% if !flash[:notice].blank? %>
<div>
	<p align = "center"><%= flash[:notice] %></p>
</div>
<% end %>

<table border = "1">
	<tr>
  		<th>Username:</th>
  		<td><%= @user.username %></td>
  	</tr>
	<tr>
  		<th>Password:</th>
  		<td><%= @user.password %></td>
  	</tr>
</table>
	<div>
		<p align="right"><%= link_to 'Back', users_path %>&nbsp;&nbsp;&nbsp;<%= link_to 'Edit',{:controller=>'users',:action=>'edits',:id=>@user.id}%>
	</div>
</div>
</div>
<% else %>
   <h2> You are not allowed to access this page </h2>
   <%= link_to("Back to home page",{:controller=>'home',:action  => 'index'}) %>
<% end %>