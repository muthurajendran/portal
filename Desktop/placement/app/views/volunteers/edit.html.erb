<% title "Edit  #{@volunteer.v_name}" %>
<div id="content" class="container_16">
    	<!-- begin main content area -->
        <div id="page_content" class="grid_11 alpha">
        	<h3 class="content_title">Change <%= @volunteer.v_name %> details</h3>
        	
 <div>
	<p align = "left"><a class="tipfade"  original-title = "Required"> *</a></th> Required</p>        	
</div>   	
<% if !flash[:notice].blank? %>
<div>
	<p align = "center"><%= flash[:notice] %></p>
</div>
<% end %>  

<div>
<% if @volunteer.errors.any? %>
    <div id="error">
      <h4 class="content_title"><%= pluralize(@volunteer.errors.count, "Error") %> Prohibited this branch from being saved:</h4>
      <ul>
      <% @volunteer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul><br/><br/>
    </div>
  <% end %>
</div> 
<div>
  	<%= form_for(:volunteer, :url => {:action => 'update', :id=> @volunteer.id }) do |f| %>
 </div> 
    <table>
      <tr>
        <th>Volunteer Name<a class="tipfade"  original-title = "Required"> *</a></th>
        <td><%= f.text_field(:v_name) %></td>
      </tr>
      <tr>
	 	<th><%= f.label "Registred Event" %><a class="tipfade"  original-title = "Required">  *</a></th>

	    <td>        <% for event in Event.find(:all) %>

	         <%= check_box_tag "volunteers[event_ids][]",event.id,@volunteer.events.include?(event)%>
	         <%= event.event_name %>

	         <%end%>  </td> 
	  </tr>
      <tr>
      		<th>Usn<a class="tipfade"  original-title = "Required"> *</a></th>
      		<td><%= f.text_field(:v_usn)%></td>
     </tr>
     <tr>
        <th>Sem<a class="tipfade"  original-title = "Required"> *</a></th>
        <td><%= f.text_field(:v_sem) %></td>
      </tr>
      <tr>
        <th>Branch<a class="tipfade"  original-title = "Required"> *</a></th>
        <td><%= f.text_field(:v_branch) %></td>
      </tr>
        <tr>
        <th>Contact Number<a class="tipfade"  original-title = "Required"> *</a></th>
        <td><%= f.text_field(:v_mob) %></td>
      </tr>
       <tr>
        <th>Email<a class="tipfade"  original-title = "Required"> *</a></th>
        <td><%= f.text_field(:v_email) %></td>
      </tr>
    </table><br/>
    
    <div class = "actions">
      <br/>
      <p align = "right"><%= submit_tag("Update", :class => "button medium radius5") %></p>
    </div>
    
    <div>
    	<p align="left"><%= link_to("Click to go Back", {:action => 'index'}) %></p>
    </div>
    
  <% end %>
</div>
</div>
