<% title "Add Company" %>
<div id="content" class="container_16">
    	<!-- begin main content area -->
        <div id="page_content" class="grid_11 alpha">
        	<h3 class="content_title">Add New Company</h3>
<div>
	<p align = "left"><a class="tipfade"  original-title = "Required"> *</a></th> Required</p>        	
</div>        	
<% if !flash[:notice].blank? %>
<div>
	<p align = "center"><%= flash[:notice] %></p>
</div>
<% end %>   



<div>
	
	
<% if @company.errors.any? %>
    <div id="error">
      <h4 class="content_title"><%= pluralize(@company.errors.count, "Error") %> Prohibited your data from being saved:</h4>
      <ul>
      <% @company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul><br/><br/>
    </div>
  <% end %>
</div>       	
<div>
	<%= form_for(:company, :url =>{:action => 'create'}, :html => {:multipart => true }) do |f| %>
</div>      
  <table>
      <tr>
        <th><%= f.label "Company Name" %><a class="tipfade"  original-title = "Required">  *</a></th>
        <td><%= f.text_field(:cmp_name) %></td>
      </tr>
	<tr>
		<th><%= f.label "Academic Year" %></th>
			<td><%= f.select(:academic_year1,[*Time.now.year-2..Time.now.year+10],:prompt=>"Please Select") %>-<%= f.select(:academic_year2,[*Time.now.year-2..Time.now.year+10],:prompt=>"Please Select") %></td>
		
	</tr>
      <tr>
	 	<th><%= f.label "Branches Eligible" %><a class="tipfade"  original-title = "Required">  *</a></th>

	    <td>        <% for branch in Branch.find(:all) %>

	         <%= check_box_tag "company[branch_ids][]",branch.id,@company.branches.include?(branch)%>
	         <%= branch.branch_name %>

	         <%end%>  </td> 
	  </tr>
	  
	  <tr>
	    <th><%= f.label "Sslc" %></th>
	    <td><%= f.text_field :sslc %></td>
	  </tr>
	  <tr>
	    <th><%= f.label :puc %></th>
	    <td><%= f.text_field :puc %></td>
	  </tr>
	  <tr>
	    <th><%= f.label :diploma %></th>
	    <td><%= f.text_field :diploma %></td>
	  </tr>
	  
	  <tr>
	    <th><%= f.label "Cgpa" %><a class="tipfade"  original-title = "Required">  *</a></th>
	    <td><%= f.text_field :cgpa %></td>
	  </tr>
	  
	  <tr>
	    <th><%= f.label "Gap in Education"%></th>
	    <td><%= f.select( :gap_in_edu,[" ",*(0..10)] ) %></td>
	  </tr>
	  
	  <tr>
  		<th><%= label_tag "Min. Date of Birth" %></th>
 		
 		<td><%= f.date_select :dob,:start_year => 1980,:end_year => Time.now.year, :include_blank => true %></td>
	  </tr>
	  
	  <tr>
	    <th><%= f.label "Salary" %></th>
	    <td><%= f.text_field :salary %></td>
	  </tr>
	  
	   <tr>
	    <th><%= f.label "Maximum Active backlogs" %></th>
	    <td><%= f.text_field :backlogs %></td>
	  </tr>

	  <tr>
	    <th><%= f.label "Registration Date"%><a class="tipfade"  original-title = "Required"> *</a></th>
	    <td><%= f.date_select :reg_date,:start_year =>  Time.now.year,:end_year => Time.now.year+2%></td>
	  </tr>
	  
	 <tr>
	    <th><%= f.label "Preplacement Talk" %></th>
	   <td><%= f.date_select :preplacement_talk,:start_year =>  Time.now.year, :start_month => Time.now.month, :start_day => Time.now.day, :end_year => Time.now.year+2, :include_blank => true %></td>
	  </tr>
	 <tr>
	    <th><%= f.label "Test Date" %></th>
	    <td><%= f.date_select :test_date,:start_year =>  Time.now.year,:end_year => Time.now.year+2, :include_blank => true %></td>
	  </tr>
	   <tr>
	    <th><%= f.label "Interview_Date" %></th>
	    <td><%= f.date_select :interview_date,:start_year =>  Time.now.year,:end_year => Time.now.year+2, :include_blank => true %></td>
	  </tr>
	  <tr>
	    <th><%= f.label "Company Type" %><a class="tipfade"  original-title = "Required">  *</a></th>
	    <td><%= f.select(:company_type,['CORE','SERVICE']) %></td>
	  </tr>
	  <tr>
	    <th><%= f.label "Extra Requirement" %></th>
	    <td><%= f.text_area :extra_req %></td>
	  </tr>
	  <tr>
	    <th><%= f.label "Miscellaneous" %></th>
	    <td><%= f.text_area :misc %></td>
	  </tr>
    </table><br/>
 <div class = "actions" ><br/>
  	<p align = "right"><%= submit_tag("Create" , :class => "button medium radius5") %></p>
  </div>
<% end %>
	 <div>
    	<p align="left"><%= link_to("Click to go Back", {:action => 'index'}) %></p>
    </div>
</div>
</div>
